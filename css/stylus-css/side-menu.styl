nav_width = 220px
nav_height = 100vh
nav_closed_width = 50px

menu_item_height = 80px

menu_color = #343838
menu_icon_size = 25px

nav
    position fixed
    left 0
    width nav_width
    height nav_height
    line-height menu_item_height - menu_icon_size
    background-color menu_color

    .logo-container
        width 100%
        height 10%
        .logo-icon
            width nav_closed_width - 6px
            height nav_closed_width - 6px
            margin-left 3px
            margin-top 25px
            display inline-block
            float left
        .company-name
            width 150px
            height 50px
            float right
            color #fff
            font-weight bold
            font-size 22px
            overflow hidden

    .menu-container
        width 100%
        height 82%
        .icon
            width menu_icon_size + 5px
            height menu_icon_size + 5px
            display inline-block
            float left
            margin-top 28px
            margin-right 50px
            margin-left 10px
        .menu-item
            display block
            width 100%
            height menu_item_height
            float right
            color white
            font-size 16px
            font-weight bold
            overflow hidden
            text-align justify
        .menu-item:hover
            background-color #fff
            color black

    .menu-icon-container
        width 100%
        height 8%
        position relative
        background-color white
    .menu-icon
        width menu_icon_size
        height menu_icon_size
        display block
        margin 0 auto
        // Vertically align
        position: relative;
        top: 50%;
        -ms-transform: translateY(-50%);
        -webkit-transform: translateY(-50%);
        -moz-transform: translateY(-50%);



// Animation and transitions for opening and closing the menu
animate(name, time)
	-webkit-animation: name time ease-in; /* Safari 4+ */
	-moz-animation: name time ease-in; /* Fx 5+ */
	-o-animation: name time ease-in; /* Opera 12+ */
	animation: name time ease-in; /* IE 10+, Fx 29+ */

@-webkit-keyframes expand-menu
    0%
        width nav_closed_width

    50%
        width nav_closed_width * 2

    100%
        width nav_width

@-webkit-keyframes close-menu
    0%
        width nav_width
    50%
        width nav_width - 50%
    100%
        width nav_closed_width

// Classes that are applied to the navbar on menu toggle
.open
    width nav_width
    animate(expand-menu, 150ms)

.close
    animate(close-menu, 200ms)
    width nav_closed_width

// On page load the menu is close, so text must be hidden.
.closed-menu
    width nav_closed_width
    .company-name
        display none
    .menu-container
        .menu-item-text
            display none
